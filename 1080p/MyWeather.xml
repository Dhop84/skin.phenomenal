<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">100</defaultcontrol>
	<menucontrol>9100</menucontrol>
	
	<controls>
		<!-- Hidden button -->
		<control type="button" id="100">
			<onclick condition="!Skin.HasSetting(KioskMode)">SetFocus(9100)</onclick>
			<onup condition="!Skin.HasSetting(KioskMode)">9100</onup>
			<ondown condition="!Skin.HasSetting(KioskMode)">9100</ondown>
			<onleft condition="!Skin.HasSetting(KioskMode)">9100</onleft>
			<onright condition="!Skin.HasSetting(KioskMode)">9100</onright>
			<visible allowhiddenfocus="true">false</visible>
		</control>

		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath background="true">$VAR[weather_fanart]</imagepath>
			<aspectratio>scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>2000</fadetime>
			<visible>!IsEmpty(Window(Weather).Property(Current.FanartCode))</visible>
		</control>
		<control type="image">
			<left>0</left>
			<top>300</top>
			<width>1920</width>
			<height>780</height>
			<texture background="true">views\showcase_floor.png</texture>
			<animation effect="fade" end="60" time="0" condition="true">Conditional</animation>
		</control>
		<control type="grouplist">
			<posx>20</posx>
			<posy>800</posy>
			<orientation>horizontal</orientation>
			<height>340</height>
			<itemgap>80</itemgap>

			<include name="weather_data">
				<param name="day" value="Day4" />
				<param name="dayname" value="$INFO[Window(weather).Property(Day4.Title)]" />
			</include>
			<include name="weather_data">
				<param name="day" value="Day3" />
				<param name="dayname" value="$INFO[Window(weather).Property(Day3.Title)]" />
			</include>
			<include name="weather_data">
				<param name="day" value="Day2" />
				<param name="dayname" value="$INFO[Window(weather).Property(Day2.Title)]" />
			</include>
			<include name="weather_data">
				<param name="day" value="Day1" />
				<param name="dayname" value="$INFO[Window(weather).Property(Day1.Title)]" />
			</include>
			<include name="weather_data">
				<param name="day" value="Day0" />
				<param name="dayname" value="$LOCALIZE[33006]" />
			</include>
		</control>
		<control type="label">
			<posx>15</posx>
			<posy>15</posy>
			<width>1920</width>
			<font>font-30</font>
			<height>90</height>
			<textcolor>white</textcolor>
			<shadowcolor>$VAR[main_color]</shadowcolor>
			<label>[B]$INFO[Window(Weather).Property(Location)][/B]</label>
			<align>center</align>
		</control>
		<!-- Menu -->
		<control type="group"> 
			<animation effect="slide" end="350" tween="cubic" easing="out" time="200" condition="ControlGroup(9100).HasFocus">Conditional</animation>
			<control type="image">
				<posx>-340</posx>
				<posy>90</posy>
				<width>340</width>
				<height>430</height>
				<texture colordiffuse="darkgrey">white.png</texture>
				<bordertexture>main/main_focus.png</bordertexture>
				<bordersize>7,45,7,7</bordersize>
				<animation effect="fade" end="75" time="0" condition="true">Conditional</animation>
			</control>

			<control type="label">
				<posx>-340</posx>
				<posy>80</posy>
				<height>40</height>
				<width>340</width>
				<textcolor>white</textcolor>
				<align>center</align>
				<label>33063</label>
				<font>font-28</font>
			</control>


			<control type="grouplist" id="9100">
				<posx>-334</posx>
				<posy>150</posy>
				<align>left</align>
				<width>326</width>
				<height>350</height>
				<onleft>100</onleft>
				<onright>100</onright>
				<onup>9100</onup>
				<ondown>9100</ondown>
				<onback>100</onback>
				<itemgap>0</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<orientation>vertical</orientation>

				<!-- Refresh -->
				<control type="button" id="2">
					<include>view_settings_radiobutton</include>
					<visible>Control.IsEnabled(2)</visible>
				</control>
				<!-- Change Location -->
				<control type="button" id="9001">
					<include>view_settings_radiobutton</include>
					<onclick>Weather.LocationNext</onclick>
					<label>$INFO[Weather.Location]</label>
				</control>
				<!-- Fanart -->
                <control type="button" id="9002">
                    <label>20413</label>
                    <onclick>RunScript(script.image.resource.select,property=weather.fanart&amp;type=resource.images.weatherfanart)</onclick>
                    <include>view_settings_radiobutton</include>
                </control>
                <!-- Icon -->
                <control type="button" id="9003">
                    <label>19284</label>
                    <onclick>RunScript(script.image.resource.select,property=weather.icons&amp;type=resource.images.weathericons)</onclick>
                    <include>view_settings_radiobutton</include>
                </control>
				<!-- Settings -->
				<control type="button" id="9004">
					<label>$LOCALIZE[5]</label>
					<onclick>activatewindow(WeatherSettings)</onclick>
					<include>view_settings_radiobutton</include>
				</control>
			</control>
		</control>
	</controls>
</window>
