<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View-Posters-51">
		<include>Posters_view</include>
	</include>
	<include name="Posters_view">
		<control type="group">
			<visible>Control.IsVisible(51) + IntegerGreaterThan(Container.NumItems,0)</visible>
			<include>views_animation</include>
			<control type="image">
				<description>Fanart</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1600</width>
				<height>900</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<texture background="true" fallback="special://skin/backgrounds/videos.jpg" diffuse="views/fanart_diffuse.png">$INFO[ListItem.Art(fanart)]</texture>
				<fadetime>300</fadetime>
				<animation effect="fade" start="100" end="70" time="300" condition="true">Conditional</animation>
				<visible>!Player.HasVideo + !Window.IsActive(mypics.xml)</visible>
			</control>
			<control type="image">
				<description>Fanart</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1600</width>
				<height>900</height>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<texture background="true" fallback="special://skin/backgrounds/pictures.jpg" diffuse="views/fanart_diffuse.png">$INFO[ListItem.FilenameAndPath]</texture>
				<fadetime>300</fadetime>
				<animation effect="fade" start="100" end="70" time="300" condition="true">Conditional</animation>
				<visible>!Player.HasVideo + Window.IsActive(mypics.xml)</visible>
			</control>

			
			<control type="FixedList" id="51">
				<posx>-140</posx>
				<posy>680</posy>
				<width>2140</width>
				<height>400</height>
				<onleft>51</onleft>
				<onright>51</onright>
				<onup>9100</onup>
				<ondown>60</ondown>
				<viewtype label="31201">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="Quadratic" easing="out">300</scrolltime>
				<preloaditems>2</preloaditems>
				<orientation>Horizontal</orientation>
				<focusposition>1</focusposition>
				<animation effect="fade" start="0" end="100" time="1000">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" delay="0" time="400">WindowClose</animation>
				<itemlayout width="220">
					<control type="image">
						<posx>0</posx>
						<width>210</width>
						<height>300</height>
						<aspectratio>strech</aspectratio>
						<texture diffuse="posterdiffuse.png" background="true" colordiffuse="grey_50">white.png</texture>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>200</width>
						<height>290</height>
						<aspectratio>strech</aspectratio>
						<texture diffuse="posterdiffuse.png" background="true">$INFO[ListItem.Icon]</texture>
						<visible>!StringCompare(Listitem.Label,..)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>200</width>
						<height>290</height>
						<aspectratio>strech</aspectratio>
						<texture diffuse="posterdiffuse.png" colordiffuse="$VAR[main_color]" background="true">$INFO[ListItem.Icon]</texture>
						<visible>StringCompare(Listitem.Label,..)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>315</posy>
						<width>200</width>
						<height>290</height>
						<aspectratio>strech</aspectratio>
						<texture diffuse="posterdiffuse.png" flipy="true" background="true">$INFO[ListItem.Icon]</texture>
						<animation effect="fade" end="15" time="0" condition="true">Conditional</animation>
					</control> 
					<!-- Title Tag on image -->
					<control type="group">
						<visible>!Skin.HasSetting(Hide_label_view_51)</visible>
						<control type="image">
							<posx>5</posx>
							<posy>245</posy>
							<width>200</width>
							<height>50</height>
							<texture diffuse="posterdiffuse.png" background="true">black.png</texture>
							<animation effect="fade" end="80" time="0" condition="true">Conditional</animation>
						</control>
						<control type="label">
							<posx>5</posx>
							<posy>247</posy>
							<width>200</width>
							<height>50</height>
							<align>center</align>	
							<font>font-22</font>
							<textcolor>grey</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
					<control type="group">
						<posx>137</posx>
						<include>view_icons_watched_flags</include>
					</control>

				</itemlayout>
				<focusedlayout width="220" height="580">
					<control type="image">
						<posx>0</posx>
						<width>210</width>
						<height>300</height>
						<aspectratio>strech</aspectratio>
						<texture diffuse="posterdiffuse.png" background="true" colordiffuse="grey_50">white.png</texture>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>200</width>
						<height>290</height>
						<aspectratio>strech</aspectratio>
						<texture diffuse="posterdiffuse.png" background="true">$INFO[ListItem.Icon]</texture>
						<visible>!StringCompare(Listitem.Label,..)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>200</width>
						<height>290</height>
						<aspectratio>strech</aspectratio>
						<texture diffuse="posterdiffuse.png" colordiffuse="$VAR[main_color]" background="true">$INFO[ListItem.Icon]</texture>
						<visible>StringCompare(Listitem.Label,..)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>315</posy>
						<width>200</width>
						<height>290</height>
						<aspectratio>strech</aspectratio>
						<texture diffuse="posterdiffuse.png" flipy="true" background="true">$INFO[ListItem.Icon]</texture>
						<animation effect="fade" end="15" time="0" condition="true">Conditional</animation>
					</control> 
					<!-- Title Tag on image -->
					<control type="group">
						<visible>!Skin.HasSetting(Hide_label_view_51)</visible>
						<control type="image">
							<posx>5</posx>
							<posy>245</posy>
							<width>200</width>
							<height>50</height>
							<texture diffuse="posterdiffuse.png" background="true">black.png</texture>
							<animation effect="fade" end="80" time="0" condition="true">Conditional</animation>
						</control>
						<control type="label">
							<posx>5</posx>
							<posy>247</posy>
							<width>200</width>
							<height>50</height>
							<align>center</align>	
							<font>font-22</font>
							<textcolor>$VAR[main_color]</textcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</control>
					<control type="group">
						<posx>137</posx>
						<include>view_icons_watched_flags</include>
					</control>
				</focusedlayout>
			</control>
			<control type="image">
				<posx>80</posx>
				<posy>680</posy>
				<width>210</width>
				<height>300</height>
				<aspectratio>strech</aspectratio>
				<texture diffuse="posterdiffuse.png" background="true" colordiffuse="$VAR[main_color]">views/poster_stroke.png</texture>
			</control>


			<control type="scrollbar" id="60">
				<posx>0</posx>
				<posy>1090</posy>
				<width>1920</width>
				<height>10</height>
				<onup>51</onup>
				<ondown condition="Player.HasMedia">FullScreen</ondown>
				<orientation>horizontal</orientation>
				<include>scroll_bar</include>
				<animation effect="slide" start="0,0" end="0,-20" time="200" condition="Container.Scrolling | Control.HasFocus(60)">Conditional</animation>
				<visible>Control.IsVisible(51)</visible>
			</control>

			<!-- Moviesets -->
			<control type="grouplist">
				<posx>1550</posx>
				<posy>280</posy>
				<itemgap>-70</itemgap>
				<align>left</align>
				<width>400</width>
				<height>780</height>
				<orientation>Horizontal</orientation>
				<visible>!Skin.HasSetting(Disable_CDART) + ListItem.IsCollection</visible>
				<control type="image">
					<width>160</width>
					<height>160</height>
					<texture diffuse="cdart_diffuse.png" background="true">$INFO[Window(home).Property(SkinHelper.MovieSet.2.DiscArt)]</texture>
					<visible>IntegerGreaterThan(Window(Home).Property(SkinHelper.MovieSet.Count),2) + !IsEmpty(Window(home).Property(SkinHelper.MovieSet.2.DiscArt))</visible>
				</control>
				<control type="image">
					<width>160</width>
					<height>160</height>
					<texture diffuse="cdart_diffuse.png" background="true">$INFO[Window(home).Property(SkinHelper.MovieSet.1.DiscArt)]</texture>
					<visible>IntegerGreaterThan(Window(Home).Property(SkinHelper.MovieSet.Count),1) + !IsEmpty(Window(home).Property(SkinHelper.MovieSet.1.DiscArt))</visible>
				</control>
				<control type="image">
					<width>160</width>
					<height>160</height>
					<texture diffuse="cdart_diffuse.png" background="true">$INFO[Window(home).Property(SkinHelper.MovieSet.0.DiscArt)]</texture>
					<visible>!IsEmpty(Window(home).Property(SkinHelper.MovieSet.0.DiscArt))</visible>
				</control>
			</control>
			<control type="grouplist">
				<posx>1550</posx>
				<posy>450</posy>
				<itemgap>-70</itemgap>
				<align>left</align>
				<width>400</width>
				<height>780</height>
				<orientation>Horizontal</orientation>
				<visible>!Skin.HasSetting(Disable_CDART) + ListItem.IsCollection</visible>

				<control type="image">
					<width>160</width>
					<height>160</height>
					<texture diffuse="cdart_diffuse.png" background="true" >$INFO[Window(home).Property(SkinHelper.MovieSet.5.DiscArt)]</texture>
					<visible>IntegerGreaterThan(Window(Home).Property(SkinHelper.MovieSet.Count),5) + !IsEmpty(Window(home).Property(SkinHelper.MovieSet.5.DiscArt))</visible>
				</control>
				<control type="image">
					<width>160</width>
					<height>160</height>
					<texture diffuse="cdart_diffuse.png" background="true">$INFO[Window(home).Property(SkinHelper.MovieSet.4.DiscArt)]</texture>
					<visible>IntegerGreaterThan(Window(Home).Property(SkinHelper.MovieSet.Count),4) + !IsEmpty(Window(home).Property(SkinHelper.MovieSet.4.DiscArt))</visible>
				</control>
				<control type="image">
					<width>160</width>
					<height>160</height>
					<texture diffuse="cdart_diffuse.png" background="true">$INFO[Window(home).Property(SkinHelper.MovieSet.3.DiscArt)]</texture>
					<visible>IntegerGreaterThan(Window(Home).Property(SkinHelper.MovieSet.Count),3) + !IsEmpty(Window(home).Property(SkinHelper.MovieSet.3.DiscArt))</visible>
				</control>
			</control>
			<!-- /CDART Movies -->

			<control type="group">
				<posx>1520</posx>
				<visible>!Container(51).OnNext + !Container(51).OnPrevious</visible>
				
				<control type="label">
					<posx>0</posx>
					<posy>100</posy>
					<width>400</width>
					<height>100</height>
					<font>font-30</font>
					<textcolor>$var[main_color]</textcolor>
					<align>center</align>
					<label>$VAR[movie_label]</label>
					<wrapmultiline>true</wrapmultiline>	
					<visible>IsEmpty(ListItem.Art(clearlogo)) + IsEmpty(ListItem.Art(tvshow.clearlogo))</visible>
				</control> 
				<!-- Clear Logo -->
				<control type="image">
					<posx>0</posx>
					<posy>100</posy>
					<width>400</width>
					<height>120</height>		
					<texture background="true">$INFO[ListItem.Art(clearlogo)]$INFO[ListItem.Art(tvshow.clearlogo)]</texture>
					<visible>!Container.Content(Episodes) + [!IsEmpty(ListItem.Art(clearlogo)) | !IsEmpty(ListItem.Art(tvshow.clearlogo))]</visible>
				</control>
				<control type="image">
					<posx>-690</posx>
					<posy>980</posy>
					<width>260</width>
					<height>100</height>		
					<texture background="true">$INFO[Skin.String(music_path)]$INFO[ListItem.Artist,,/logo.png]</texture>
					<visible>Container.Content(Artists) | Container.Content(Albums)</visible>
				</control>

				<!-- Genre -->
				<control type="label">
					<posx>5</posx>
					<posy>260</posy>
					<width>380</width>
					<height>30</height>
					<label>$INFO[ListItem.Genre]</label>
					<font>font-22</font>
					<align>center</align>
					<visible>!ListItem.IsCollection</visible>
				</control>
				<!-- Duration -->
				<control type="label">
					<posx>370</posx>
					<posy>300</posy>
					<width>120</width>
					<height>30</height>
					<label>$INFO[Listitem.Duration,, $LOCALIZE[12391]]</label>
					<font>font-20</font>
					<align>right</align>
					<textcolor>grey_b</textcolor>
					<visible>!IsEmpty(ListItem.Duration) + IntegerGreaterThan(ListItem.Duration,0)</visible>
				</control>
					<!-- Resolution -->
				<control type="label">
					<posx>230</posx>
					<posy>300</posy>
					<width>160</width>
					<height>30</height>
					<label>$INFO[Listitem.VideoResolution] $VAR[hd_or_sd] ●</label>
					<font>font-20</font>
					<align>right</align>
					<textcolor>grey_b</textcolor>
					<visible>!IsEmpty(ListItem.VideoResolution) + IntegerGreaterThan(ListItem.VideoResolution,0)</visible>
				</control>
				<!-- Year -->
				<control type="label">
					<posx>300</posx>
					<posy>220</posy>
					<width>120</width>
					<height>30</height>
					<label>$INFO[ListItem.Year]</label>
					<font>font-20</font>
					<align>left</align>
					<textcolor>grey_a</textcolor>
					<visible>!ListItem.IsCollection + !Container.Content(Seasons)</visible>
				</control>
				<!-- Season Label -->
				<control type="label">
					<posx>0</posx>
					<posy>220</posy>
					<width>400</width>
					<height>30</height>
					<label>$INFO[ListItem.Label]</label>
					<font>font-22</font>
					<align>center</align>
					<textcolor>$VAR[main_color]</textcolor>
					<visible>Container.Content(Seasons) + !StringCompare(Listitem.Label,..)</visible>
				</control>
				<!-- Star Rating -->
				<control type="group">
					<posx>15</posx>
					<posy>220</posy>
					<visible>!IsEmpty(ListItem.StarRating) + !ListItem.IsCollection + !IsEmpty(ListItem.Rating) + !Container.Content(Seasons) + !Container.Content(Artists)</visible>
					<animation effect="slide" end="90" time="0" condition="IsEmpty(ListItem.Year)">Conditional</animation>
					<control type="image">
						<description>Rating image</description>
						<posx>0</posx>
						<posy>0</posy>
						<width>188</width>
						<height>38</height>
						<texture>rating0.png</texture>
						<aspectratio align="right">keep</aspectratio>
					</control>
					<control type="image">
						<description>Rating image</description>
						<posx>0</posx>
						<posy>0</posy>
						<width>188</width>
						<height>38</height>
						<texture colordiffuse="$VAR[main_color]">$INFO[ListItem.StarRating]</texture>
						<aspectratio align="right">keep</aspectratio>
						<visible>!StringCompare(ListItem.StarRating,rating0.png)</visible>
					</control>
					<!-- Rating -->
					<control type="label">
						<posx>198</posx>
						<posy>0</posy>
						<width>380</width>
						<height>30</height>
						<label>$INFO[ListItem.Rating]</label>
						<font>font-20</font>
						<align>left</align>
						<textcolor>grey_a</textcolor>
					</control>
				</control>

				<control type="textbox">
					<description>Plot Value for TVShows\Movies</description>
					<posx>5</posx>
					<posy>350</posy>
					<width>380</width>
					<height>320</height>
					<font>font-20</font>
					<align>right</align>
					<textcolor>grey_a</textcolor>
					<label>$VAR[ViewFanartText]</label>
					<autoscroll time="2000" delay="8000" repeat="5000">!Skin.HasSetting(AutoScroll)</autoscroll>
				</control> 

			</control>

			<control type="group">
				<posx>140</posx>
				<posy>570</posy>
				<include>scroll_letter</include>
			</control>
		</control>
	</include>
</includes>
