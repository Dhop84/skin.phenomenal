<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="weather_data">
		<definition>
			<control type="group">
				<width>300</width>
				<height>340</height>
				<control type="label">
					<posx>0</posx>
					<posy>15</posy>
					<width>300</width>
					<font>font-24</font>
					<height>90</height>
					<label>[B]$PARAM[dayname][/B]</label>
					<align>center</align>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>40</posy>
					<height>200</height>
					<width>300</width>
					<aspectratio>keep</aspectratio>
					<texture>weather_\$INFO[Window(weather).Property($PARAM[day].FanartCode),,.png]</texture>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>205</posy>
					<width>300</width>
					<height>90</height>
					<font>font-22</font>
					<align>center</align>
					<label>[B]$INFO[Window(weather).Property($PARAM[day].HighTemp)]$INFO[System.TemperatureUnits][/B]  $INFO[Window(weather).Property($PARAM[day].LowTemp)]$INFO[System.TemperatureUnits]</label>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>235</posy>
					<width>300</width>
					<height>90</height>
					<font>font-20</font>
					<align>center</align>
					<label>[B]$INFO[Window(weather).Property($PARAM[day].Outlook)][/B]</label>
				</control>
			</control>
		</definition>
	</include>
</includes>
