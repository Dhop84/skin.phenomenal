<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="weather_data">
		<definition>
			<control type="group">
				<width>300</width>
				<height>340</height>
				<control type="label">
					<posx>0</posx>
					<posy>15</posy>
					<width>300</width>
					<font>font-24</font>
					<height>90</height>
					<label>[B]$PARAM[dayname][/B]</label>
					<align>center</align>
				</control>
				<control type="multiimage">
					<posx>0</posx>
					<posy>60</posy>
					<height>160</height>
					<width>300</width>
					<aspectratio>keep</aspectratio>
					<imagepath>$INFO[Skin.String(weather.icons.path)]$INFO[Window(weather).Property($PARAM[day].FanartCode)]$INFO[Skin.String(weather.icons.ext)]</imagepath>
					<visible>!IsEmpty(Skin.String(weather.icons.path)) + !IsEmpty(Skin.String(weather.icons.ext)) + !Skin.HasSetting(weather.icons.multi)</visible>
				</control>
				<control type="multiimage">
					<posx>0</posx>
					<posy>60</posy>
					<height>160</height>
					<width>300</width>
					<aspectratio>keep</aspectratio>
					<imagepath>$INFO[Skin.String(weather.icons.path)]$INFO[Window(weather).Property($PARAM[day].FanartCode)]</imagepath>
					<timeperimage>29</timeperimage>
					<randomize>false</randomize>
					<animation effect="fade" start="0" end="100" time="3000" delay="100">WindowOpen</animation>
					<visible>!IsEmpty(Skin.String(weather.icons.path)) + Skin.HasSetting(weather.icons.multi)</visible>
				</control>
				<control type="multiimage">
					<posx>0</posx>
					<posy>60</posy>
					<height>160</height>
					<width>300</width>
					<aspectratio>keep</aspectratio>
					<imagepath>resource://resource.images.weathericons.default/$INFO[Window(weather).Property($PARAM[day].FanartCode),,.png]</imagepath>
					<visible>IsEmpty(Skin.String(weather.icons.path))  + System.HasAddon(resource.images.weathericons.default)</visible>
				</control>
				
				<control type="label">
					<posx>0</posx>
					<posy>205</posy>
					<width>300</width>
					<height>90</height>
					<font>font-22</font>
					<align>center</align>
					<label>[B]$INFO[Window(weather).Property($PARAM[day].HighTemp)]$INFO[System.TemperatureUnits][/B]  $INFO[Window(weather).Property($PARAM[day].LowTemp)]$INFO[System.TemperatureUnits]</label>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>235</posy>
					<width>300</width>
					<height>90</height>
					<font>font-20</font>
					<align>center</align>
					<label>[B]$INFO[Window(weather).Property($PARAM[day].Outlook)][/B]</label>
				</control>
			</control>
		</definition>
	</include>
	
	<variable name="weather_fanart">
		<value condition="!IsEmpty(Skin.String(weather.fanart.path)) + !IsEmpty(Skin.String(weather.fanart.ext)) + !Skin.HasSetting(weather.fanart.multi)">$INFO[Skin.String(weather.fanart.path)]$INFO[Window(Weather).Property(Current.FanartCode)]$INFO[Skin.String(weather.fanart.ext)]</value>
		<value condition="!IsEmpty(Skin.String(weather.fanart.path)) + Skin.HasSetting(weather.fanart.multi)">$INFO[Skin.String(weather.fanart.path)]$INFO[Window(Weather).Property(Current.FanartCode)]</value>
		<value condition="IsEmpty(Skin.String(weather.fanart.path))  + System.HasAddon(resource.images.weatherfanart.single)">resource://resource.images.weatherfanart.single/$INFO[Window(Weather).Property(Current.FanartCode),,.jpg]</value>
		<value>special://skin/backgrounds/camera.jpg</value>
	</variable>

</includes>
