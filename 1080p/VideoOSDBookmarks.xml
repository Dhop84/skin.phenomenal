			<viewtype label="536">icon</viewtype>
			<pagecontrol>61</pagecontrol>
			<orientation>vertical</orientation>
			<itemlayout width="270" height="180">
				<control type="image">
					<posx>10</posx>
					<posy>10</posy>
					<width>240</width>
					<height>160</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<bordertexture colordiffuse="grey_a">white.png</bordertexture>
					<bordersize>5</bordersize>
				</control>
				<control type="image">
					<posx>15</posx>
					<posy>130</posy>
					<width>230</width>
					<height>36</height>
					<texture>main/widget_title.png</texture>
				</control>
				<control type="label">
					<posx>15</posx>
					<posy>130</posy>
					<width>230</width>
					<height>33</height>
					<font>font-20</font>
					<textcolor>white</textcolor>
					<selectedcolor>$VAR[main_color]</selectedcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
				</control>
			</itemlayout>
			<focusedlayout width="270" height="180">
				<control type="image">
					<posx>10</posx>
					<posy>10</posy>
					<width>240</width>
					<height>160</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<bordertexture colordiffuse="$VAR[main_color]">white.png</bordertexture>
					<bordersize>5</bordersize>
				
				</control>
				<control type="image">
					<posx>15</posx>
					<posy>130</posy>
					<width>230</width>
					<height>36</height>
					<texture>main/widget_title.png</texture>
				</control>	
				<control type="label">
					<posx>15</posx>
					<posy>130</posy>
					<width>230</width>
					<height>33</height>
					<font>font-20</font>
					<textcolor>$VAR[main_color]</textcolor>
					<selectedcolor>$VAR[main_color]</selectedcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
				</control>
			</focusedlayout>
