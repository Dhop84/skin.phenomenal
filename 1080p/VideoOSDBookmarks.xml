<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<coordinates>
		<posx>360</posx>
		<posy>97</posy>
	</coordinates>
	
	<animation effect="slide" start="-2000,0" end="0,0" time="200">WindowOpen</animation>
	<animation effect="slide" start="0," end="2000,0" time="200">WindowClose</animation>
	<animation effect="fade" end="96" time="0" condition="true">Conditional</animation>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1200</width>
			<height>702</height>
			<texture colordiffuse="darkgrey">white.png</texture>
			<bordertexture colordiffuse="grey_b">white.png</bordertexture>
			<bordersize>2</bordersize>
		</control>
		<control type="label">
			<description>heading label</description>
			<posx>60</posx>
			<posy>10</posy>
			<width>1080</width>
			<height>45</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>font-32</font>
			<label>$LOCALIZE[298]</label>
			<textcolor>white</textcolor>
		</control>
		<control type="image">
			<posx>60</posx>
			<posy>70</posy>
			<width>1080</width>
			<height>2</height>
			<texture>white.png</texture>
