			<font>font-20</font>
			<textcolor>lightgrey</textcolor>
			<focusedcolor>white</focusedcolor>
			<align>center</align>

			<onleft>2</onleft>
			<onright>4</onright>
			<ondown>11</ondown>
			<onup>11</onup>
			<animation effect="slide" start="0,0" end="180,0" time="0" condition="!VideoPlayer.Content(Episodes)">conditional</animation>
		</control>
