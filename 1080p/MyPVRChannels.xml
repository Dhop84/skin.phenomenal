<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	
	<views><include>view_numbers</include></views>
	<menucontrol>9100</menucontrol>
	<controls>
		<include>FS_Video</include>
		<control type="group">
			<control type="group">
				<include>view_conditions</include>
				<include>top_bar</include>
				<include>VideoInfo</include>
				<include>MusicInfo</include>
			</control>
		</control>
		<control type="group"> 
			<include>myvideonav_hiddenbutton</include>
			<include name="myvideonav_toolbar_animation" condition="StringCompare(System.Language,Hebrew) | Skin.HasSetting(Prefer_RTL)"><param name="end" value="350" /></include>
			<include name="myvideonav_toolbar_animation" condition="!StringCompare(System.Language,Hebrew) + !Skin.HasSetting(Prefer_RTL)"><param name="end" value="-350" /></include>
			<control type="image">
				<posx>-340</posx>
				<posy>90</posy>
				<width>340</width>
				<height>430</height>
				<texture colordiffuse="darkgrey">white.png</texture>
				<bordertexture>main/main_focus.png</bordertexture>
				<bordersize>7,45,7,7</bordersize>
				<animation effect="fade" end="75" time="0" condition="true">Conditional</animation>
			</control>

			<control type="label">
				<posx>-340</posx>
				<posy>80</posy>
				<height>40</height>
				<width>340</width>
				<textcolor>white</textcolor>
				<align>center</align>
				<label>33063</label>
				<font>font-28</font>
			</control>
			<control type="grouplist" id="9100">
				<posx>-334</posx>
				<posy>150</posy>
				<align>left</align>
				<width>326</width>
				<height>350</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9100</onup>
				<ondown>9100</ondown>
				<onback>50</onback>
				<itemgap>0</itemgap>
				<usecontrolcoords>true</usecontrolcoords>
				<orientation>vertical</orientation>
				<visible>!Skin.HasSetting(KioskMode)</visible>
				<control type="button" id="4000">
					<description>View As button</description>
					<label>$LOCALIZE[457]: $INFO[Container.Viewmode]</label>
					<onclick>RunScript(script.skin.helper.service,action=SETVIEW)</onclick>
					<include>view_settings_radiobutton</include>
				</control>
				<control type="button" id="498">
					<description>Show View Options</description>
					<label>14018</label>
					<include>view_settings_radiobutton</include>
					<onclick>SetFocus(8000)</onclick>
				</control>
				<control type="button" id="3">
					<description>Sort by button</description>
					<label>103</label>
					<include>view_settings_radiobutton</include>
				</control>
				<control type="togglebutton" id="4">
					<description>Sort asc</description>
					<posx>0</posx>
					<posy>-45</posy>
					<width>45</width>
					<align>left</align>
					<label>-</label>
					<altlabel>-</altlabel>
				</control>
				<control type="button" id="28">
					<description>Change Channel Groups</description>
					<label>-</label>
					<include>view_settings_radiobutton</include>
				</control>
				<control type="radiobutton" id="31">
					<description>Filter</description>
					<include>view_settings_radiobutton</include>
					<label>587</label>
					<selected>Container.Filtered</selected>
					<onclick>right</onclick>
					<visible>Window.IsActive(TVChannels) | Window.IsActive(RadioChannels)</visible>
				</control>
				<control type="radiobutton" id="5">
					<description>Group recording items by folder structure</description>
					<include>view_settings_radiobutton</include>
					<label>19270</label>
					<visible>Window.IsActive(TVRecordings) | Window.IsActive(RadioRecordings)</visible>
				</control>
				<control type="radiobutton" id="6">
					<description>Show hidden channels</description>
					<label>19051</label>
					<include>view_settings_radiobutton</include>
					<visible>Window.IsActive(TVChannels) | Window.IsActive(RadioChannels)</visible>
				</control>
				<control type="button" id="901">
					<description>Channels</description>
					<label>$LOCALIZE[19019]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVChannels)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioChannels)</onclick>
					<include>view_settings_radiobutton</include>
				</control>
				<control type="button" id="902">
					<description>Guide</description>
					<label>$LOCALIZE[22020]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVGuide)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioGuide)</onclick>
					<include>view_settings_radiobutton</include>
				</control>
				<control type="button" id="903">
					<description>Recordings</description>
					<label>$LOCALIZE[19163]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVRecordings)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioRecordings)</onclick>
					<include>view_settings_radiobutton</include>
				</control>
				<control type="button" id="904">
					<description>Search</description>
					<label>$LOCALIZE[137]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVSearch)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioSearch)</onclick>
					<include>view_settings_radiobutton</include>
				</control>
				<control type="button" id="905">
					<description>Timers</description>
					<label>$LOCALIZE[31048]</label>
					<onclick condition="IsEmpty(Window.Property(IsRadio))">ActivateWindow(TVTimers)</onclick>
					<onclick condition="!IsEmpty(Window.Property(IsRadio))">ActivateWindow(RadioTimers)</onclick>
					<include>view_settings_radiobutton</include>
				</control>

			</control>
		</control>
	<include>view_options_panel</include>
	</controls>
</window>
