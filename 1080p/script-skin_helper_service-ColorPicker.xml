<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>70</posy>
			<width>380</width>
			<height>970</height>
			<texture background="true" colordiffuse="grey_50">white.png</texture>
			<bordertexture colordiffuse="grey">white.png</bordertexture>
			<bordersize>2</bordersize>
			<visible>!Window.IsActive(script-skinshortcuts.xml) + !Window.IsActive(SkinSettings.xml)</visible>
		</control>


		<control type="grouplist" id="9000">
			<posx>60</posx>
			<posy>90</posy>
			<width>300</width>
			<height>300</height>
			<onup>3110</onup>
			<ondown>3015</ondown>

			<!-- edit manual -->
			<control type="button" id="3010">
				<width>260</width>
				<textoffsetx>5</textoffsetx>			
				<label>532</label>
				<include>button_dialogs</include>
			</control>

			<!-- Save button -->
			<control type="button" id="3012">
				<width>260</width>
				<textoffsetx>5</textoffsetx>
				<label>190</label>
				<include>button_dialogs</include>			
			</control>

			<!-- None
			<control type="button" id="3011">
				<width>260</width>
				<textoffsetx>5</textoffsetx>			
				<label>$ADDON[script.skin.helper.service 32013]</label>
				<include>button_dialogs</include>
			</control> -->
		</control>		

		<control type="group" id="3020">
			<posx>60</posx>
			<posy>170</posy>
			<width>300</width>
			<height>60</height>
			<control type="label" id="3016">
				<!-- label opacity-->
				<posx>0</posx>
				<posy>100</posy>
				<width>140</width>
				<left>0</left>
				<align>left</align>
				<label>$ADDON[script.skin.helper.service 32049]:</label>
				<textcolor>white</textcolor>
				<texturenofocus colordiffuse="black" border="5">panel_trans.png</texturenofocus>
			</control>
			<control type="slider" id="3015">
				<!-- opacity slider -->
				<posx>0</posx>
				<posy>135</posy>
				<width>250</width>
				<height>38</height>
				<onup>3011</onup>
				<ondown>3110</ondown>
				<texturesliderbar colordiffuse="grey_a" border="1,1,1,1">osd/2.png</texturesliderbar>
				<textureslidernib>osd/3.png</textureslidernib>
				<textureslidernibfocus colordiffuse="$VAR[main_color]">osd/3.png</textureslidernibfocus>
			</control>
			<control type="label" id="3017">
				<!-- opacity percentage -->
				<posx>260</posx>
				<posy>100</posy>
				<width>100</width>
				<height>60</height>
				<align>right</align>
				<onup>3110</onup>
				<onleft>3010</onleft>
				<label>$INFO[Control.Getlabel(3015)]</label>
				<textcolor>white</textcolor>
			</control>
		</control>

		<control type="label">
			<posx>60</posx>
			<posy>334</posy>
			<width>300</width>
			<height>45</height>
			<align>left</align>
			<aligny>center</aligny>
			<font>font-22</font>
			<textcolor>$INFO[Window.Property(colorstring)]</textcolor>
			<label>$LOCALIZE[737]: $INFO[Window.Property(colorstring)]</label>
		</control> 

		<control type="panel" id="3110">
			<left>10</left>
			<top>380</top>
			<width>360</width>
			<height>740</height>
			<onup>3015</onup>
			<ondown>3010</ondown>
			<onleft>3110</onleft>
			<onright>3110</onright>
			<orientation>vertical</orientation>
			<scrolltime>200</scrolltime>
			<itemlayout height="44" width="44">
				<control type="image">
					<left>7</left>
					<top>7</top>
					<width>46</width>
					<height>46</height>
					<aspectratio>keep</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<!-- <control type="image">
					<left>7</left>
					<top>7</top>
					<width>46</width>
					<height>46</height>
					<texture>main/favs.png</texture>
					<visible>StringCompare(ListItem.Label,Window.Property(colorstring)) + !IsEmpty(Window.Property(colorstring))</visible>
				</control> -->
			</itemlayout>
			<focusedlayout height="44" width="44">
				<control type="image">
					<left>7</left>
					<top>7</top>
					<width>46</width>
					<height>46</height>
					<aspectratio>keep</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<!-- <control type="image">
					<left>7</left>
					<top>7</top>
					<width>46</width>
					<height>46</height>
					<texture>main/favs.png</texture>
					<visible>StringCompare(ListItem.Label,Window.Property(colorstring)) + !IsEmpty(Window.Property(colorstring))</visible>
				</control> -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>44</width>
					<height>44</height>
					<texture colordiffuse="$VAR[main_color]">thumbnail_focused.png</texture>
					<animation effect="zoom" start="100" end="97" time="150" condition="Control.HasFocus(100)" pulse="true" >Conditional</animation>
				</control>
			</focusedlayout>
		</control>

	</controls>
</window>
