<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="skin_home">
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath background="true">$VAR[varBackground]</imagepath>
			<aspectratio aligny="top">scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>650</fadetime>
			<visible>!Player.HasVideo + !Player.HasAudio + !Control.HasFocus(9001)</visible>
		</control>
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath background="true">$VAR[varBackground2]</imagepath>
			<aspectratio aligny="top">scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>650</fadetime>
			<visible>!Player.HasVideo + !Player.HasAudio + Control.HasFocus(9001)</visible>
		</control>

		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>special://skin/backgrounds/music.jpg</texture>
			<visible>Player.HasAudio + !IsEmpty(Window(Visualisation).Property(ArtistSlideshow)) + !IsEmpty(Window(Visualisation).Property(ArtistSlideshowTransparent))</visible>
		</control>
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath fallback="special://skin/backgrounds/music.jpg" background="true">$VAR[ArtistSlide]</imagepath>
			<aspectratio aligny="top">scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>650</fadetime>
			<visible>Player.HasAudio</visible>
		</control>
		<include>hex_fanart</include>
		<include>FS_Video</include>
		<control type="visualisation">
			<description>visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<visible>Player.HasAudio + IsEmpty(Window(Videos).Property(PlayingBackgroundMedia))</visible>
		</control>
		<control type="group">
			<include condition="system.getbool(lookandfeel.enablerssfeeds) + !Skin.HasSetting(Home_Horizontal)">RSS</include>
			<include condition="Skin.HasSetting(Home_Horizontal)">Home_Horizontal</include>
			<include condition="!Skin.HasSetting(Home_Horizontal)">Home_Vertical</include>
			<include>top_bar_home</include>
			<include condition="system.getbool(lookandfeel.enablerssfeeds) + Skin.HasSetting(Home_Horizontal)">RSS</include>
		</control>
	</include>
</includes>
