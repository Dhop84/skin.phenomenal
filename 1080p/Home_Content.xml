<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="skin_home">
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath background="true">$VAR[varBackground]</imagepath>
			<aspectratio aligny="top">scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>650</fadetime>
			<visible>!Player.HasVideo + !Player.HasAudio + !Control.HasFocus(9001)</visible>
		</control>
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath background="true">$VAR[varBackground2]</imagepath>
			<aspectratio aligny="top">scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>650</fadetime>
			<visible>!Player.HasVideo + !Player.HasAudio + Control.HasFocus(9001)</visible>
		</control>

		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>special://skin/backgrounds/music.jpg</texture>
			<visible>Player.HasAudio + !IsEmpty(Window(Visualisation).Property(ArtistSlideshow)) + !IsEmpty(Window(Visualisation).Property(ArtistSlideshowTransparent))</visible>
		</control>
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<imagepath fallback="special://skin/backgrounds/music.jpg" background="true">$VAR[ArtistSlide]</imagepath>
			<aspectratio aligny="top">scale</aspectratio>
			<timeperimage>5000</timeperimage>
			<randomize>true</randomize>
			<fadetime>650</fadetime>
			<visible>Player.HasAudio</visible>
		</control>
		<include>FS_Video</include>
		<control type="visualisation">
			<description>visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<visible>Player.HasAudio + IsEmpty(Window(Videos).Property(PlayingBackgroundMedia))</visible>
		</control>
		<control type="group">
			<include condition="Skin.HasSetting(Home_Horizontal)">Home_Horizontal</include>
			<include condition="!Skin.HasSetting(Home_Horizontal)">Home_Vertical</include>
			<include>top_bar_home</include>
			<include condition="system.getbool(lookandfeel.enablerssfeeds)">RSS</include>
		</control>
		<control type="list" id="30">			
			<description>hidden container for playlist background</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<visible>true</visible>
			<onup>50</onup>
			<ondown>50</ondown>
			<onleft>50</onleft>
			<onright>50</onright>
			<autoscroll>true</autoscroll>
			<scrolltime tween="sine" easing="inout">6000</scrolltime>
			<fadetime>500</fadetime>
			<itemlayout width="1" height="1">
			</itemlayout>
			<focusedlayout height="1" width="1">
			</focusedlayout>
			<content>$INFO[Container(9000).ListItem.Property(backgroundPlaylist)]</content>
		</control>


	</include>
</includes>
