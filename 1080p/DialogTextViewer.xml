<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>61</defaultcontrol>
	<controls>
		<include>fade_screen_grey</include>
		<control type="group">
			<posx>360</posx>
			<include>dialog_zoom_animation</include>
			<visible>!Window.IsVisible(addonsettings)</visible>
			<!-- Header -->
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1200</width>
				<height>80</height>
				<texture background="true" colordiffuse="$VAR[main_color]">white.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1200</width>
				<height>10</height>
				<texture>shadow_horizontal.png</texture>
			</control>

			<control type="label" id="1">
				<description>Item Title value</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>1200</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<textcolor>white</textcolor>
			</control>
			
			<!-- Close Button -->
			<include name="close_button"><param name="posx" value="22" /><param name="posy" value="24" /></include>
			
			<!-- Content area -->
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>80</posy>
				<width>1200</width>
				<height>1000</height>
				<texture background="true" flipy="false">dialogs/long_grey.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>80</top>
				<width>1200</width>
				<height>10</height>
				<texture>shadow_horizontal.png</texture>
			</control>
			<!-- left shadow-->
			<control type="image">
				<left>-30</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture flipx="true">shadow_vertical.png</texture>
			</control>
			<!-- right shadow-->
			<control type="image">
				<left>1200</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture>shadow_vertical.png</texture>
			</control>
			
			<control type="textbox" id="5">
				<description>textarea</description>
				<posx>50</posx>
				<posy>100</posy>
				<width>1100</width>
				<height>970</height>
				<label>-</label>
				<font>font-19</font>
				<align>justify</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<pagecontrol>61</pagecontrol>
			</control>
			<control type="scrollbar" id="61">
				<description>Next page button</description>
				<posx>1180</posx>
				<posy>100</posy>
				<width>10</width>
				<height>970</height>
				<include>scroll_bar</include>
				<onleft>6</onleft>
				<onright>5</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
		</control>
	</controls>
</window>
