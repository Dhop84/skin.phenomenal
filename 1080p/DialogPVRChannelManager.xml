<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>20</defaultcontrol>
	<animation effect="zoom" start="0" end="100" center="900,480" time="300">WindowOpen</animation>
	<animation effect="zoom" start="100" end="0" center="900,480" time="300">WindowClose</animation>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>80</posy>
			<width>1920</width>
			<height>1000</height>
			<texture background="true" colordiffuse="grey_50">white.png</texture>
			<bordertexture colordiffuse="grey">white.png</bordertexture>
			<bordersize>2</bordersize>
		</control>
		<control type="group">
			<posy>80</posy>
			<control type="label">
				<description>Header</description>
				<posx>0</posx>
				<posy>30</posy>
				<width>1920</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<label>$VAR[DialogPVRChannelManagerHeader]</label>
				<font>font-32</font>
			</control>
			<!-- Seperators -->
			<control type="image">
				<posx>75</posx>
				<posy>115</posy>
				<width>1770</width>
				<height>2</height>
				<texture>white.png</texture>
			</control>

			<control type="label">
				<top>162</top>
				<posx>80</posx>
				<width>700</width>
				<height>66</height>
				<align>center</align>
				<label>$LOCALIZE[19019]</label>
			</control>
			<!-- Left list -->			
			<control type="list" id="20">
				<left>80</left>
				<top>228</top>
				<width>700</width>
				<height>660</height>
				<onup>20</onup>
				<ondown>20</ondown>
				<onleft>61</onleft>
				<onright>9000</onright>
				<pagecontrol>61</pagecontrol>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="700" height="66">

					<control type="group">
						<animation effect="fade" start="100" end="50" condition="!ListItem.Property(ActiveChannel)">Conditional</animation>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>700</width>
							<height>66</height>
							<texture colordiffuse="darkgrey">white.png</texture>
						</control>
						<control type="image">
							<left>3</left>
							<top>3</top>
							<width>60</width>
							<height>60</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<left>80</left>
							<top>0</top>
							<width>620</width>
							<height>66</height>
							<font>font-22</font>
							<textcolor>red</textcolor>
							<selectedcolor>red</selectedcolor>
							<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
							<visible>ListItem.Property(Changed)</visible>
						</control>
						<control type="label">
							<left>80</left>
							<top>0</top>
							<width>620</width>
							<height>66</height>
							<font>font-22</font>
							<textcolor>grey_b</textcolor>
							<selectedcolor>grey_b</selectedcolor>
							<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
							<visible>!ListItem.Property(Changed)</visible>
						</control>
					</control>

				</itemlayout>

				<focusedlayout width="700" height="66">

					<control type="group">
						<animation effect="fade" start="100" end="50" condition="!ListItem.Property(ActiveChannel)">Conditional</animation>
						<animation effect="fade" start="100" end="75" condition="!Control.HasFocus(20)">Conditional</animation>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>700</width>
							<height>66</height>
							<texture colordiffuse="grey_b">white.png</texture>
						</control>
						<control type="image">
							<left>3</left>
							<top>3</top>
							<width>60</width>
							<height>60</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<left>80</left>
							<top>0</top>
							<width>620</width>
							<height>66</height>
							<font>font-22</font>
							<textcolor>red</textcolor>
							<selectedcolor>red</selectedcolor>
							<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
							<visible>ListItem.Property(Changed)</visible>
						</control>
						<control type="label">
							<left>80</left>
							<top>0</top>
							<width>620</width>
							<height>66</height>
							<font>font-22</font>
							<textcolor>$VAR[main_color]</textcolor>
							<selectedcolor>$VAR[main_color]</selectedcolor>
							<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
							<visible>!ListItem.Property(Changed)</visible>
						</control>

					</control>

				</focusedlayout>

			</control>

			<control type="grouplist" id="9000">
				<left>960</left>
				<top>72</top>
				<width>800</width>
				<height>660</height>
				<itemgap>0</itemgap>
				<onleft>20</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>4</ondown>
				<orientation>vertical</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<!-- Channel options header -->
				<control type="label" id="100">
					<posx>0</posx>
					<width>800</width>
					<height>66</height>
					<align>center</align>
					<label>$LOCALIZE[33063]</label>
				</control>

				<!-- Channel activated -->
				<control type="radiobutton" id="7">
					<width>800</width>
					<label>19074</label>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<focusedcolor>white</focusedcolor>
					<textcolor>white</textcolor>
					<texturefocus colordiffuse="grey_a">white.png</texturefocus>
					<texturenofocus colordiffuse="darkgrey">white.png</texturenofocus>
					<disabledcolor>grey_a</disabledcolor>
					<font>font-22</font>
					<textoffsetx>30</textoffsetx>
					<textwidth>900</textwidth>
				</control>

				<!-- Channel name -->
				<control type="edit" id="8">
					<label>19201</label>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<width>800</width>
					<textoffsetx>20</textoffsetx>
					<textwidth>760</textwidth>
					<include>button_spin_playlist</include>
				</control>

				<!-- Channel logo button -->
				<control type="button" id="9">
					<width>800</width>
					<label>19202</label>
					<posx>0</posx>
					<posy>0</posy>
					<align>left</align>
					<height>50</height>
					<include>button_spin_playlist</include>
				</control>

				<!-- Current channel logo -->
				<control type="image" id="10">
					<top>-50</top>
					<left>737</left>
					<width>50</width>
					<height>50</height>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>

				<!-- EPG activated -->
				<control type="radiobutton" id="12">
					<width>800</width>
					<label>19206</label>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<focusedcolor>white</focusedcolor>
					<textcolor>white</textcolor>
					<texturefocus colordiffuse="grey_a">white.png</texturefocus>
					<texturenofocus colordiffuse="darkgrey">white.png</texturenofocus>
					<disabledcolor>grey_a</disabledcolor>
					<font>font-22</font>
					<textoffsetx>30</textoffsetx>
					<textwidth>900</textwidth>
				</control>

				<!-- EPG source -->
				<control type="spincontrolex" id="13">
					<width>800</width>
					<textwidth>760</textwidth>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<include>button_spin_playlist</include>
					<reverse>yes</reverse>
					<label>19200</label>
				</control>

				<!-- Parental locked -->
				<control type="radiobutton" id="14">
					<width>800</width>
					<label>19267</label>
					<posx>0</posx>
					<posy>0</posy>
					<height>50</height>
					<focusedcolor>white</focusedcolor>
					<textcolor>white</textcolor>
					<texturefocus colordiffuse="grey_a">white.png</texturefocus>
					<texturenofocus colordiffuse="darkgrey">white.png</texturenofocus>
					<disabledcolor>grey_a</disabledcolor>
					<font>font-22</font>
					<textoffsetx>30</textoffsetx>
					<textwidth>900</textwidth>
				</control>

			</control>

			<!-- Button grouplist -->
			<control type="grouplist" id="9001">
				<left>80</left>
				<top>926</top>
				<width>1660</width>
				<itemgap>5</itemgap>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onup>9000</onup>
				<ondown>noop</ondown>
				<defaultcontrol>4</defaultcontrol>
				<orientation>horizontal</orientation>

				<!-- OK Button -->
				<control type="button" id="4">
					<width>260</width>
					<texturenofocus colordiffuse="darkgrey">white.png</texturenofocus>
					<include>skinbuttons</include>
					<label>186</label>
				</control>

				<!-- Cancel Button -->
				<control type="button" id="6">
					<width>260</width>
					<texturenofocus colordiffuse="darkgrey">white.png</texturenofocus>
					<include>skinbuttons</include>
					<label>222</label>
				</control>

				<!-- Apply changes Button -->
				<control type="button" id="5">
					<width>366</width>
					<texturenofocus colordiffuse="darkgrey">white.png</texturenofocus>
					<include>skinbuttons</include>
					<label>14070</label>
				</control>

				<!-- TV/Radio Button -->
				<control type="button" id="34">
					<width>366</width>
					<texturenofocus colordiffuse="darkgrey">white.png</texturenofocus>
					<include>skinbuttons</include>
					<label>$VAR[DialogPVRChannelManagerButton]</label>
				</control>

				<!-- Group Manager Button -->
				<control type="button" id="30">
					<width>366</width>
					<texturenofocus colordiffuse="darkgrey">white.png</texturenofocus>
					<include>skinbuttons</include>
					<label>19205</label>
				</control>
			</control>
			<control type="scrollbar" id="61">
				<posx>45</posx>
				<posy>228</posy>
				<width>10</width>
				<height>664</height>
				<include>scroll_bar</include>
				<onleft>9001</onleft>
				<onright>9000</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>

			<control type="image" id="10">
				<top>600</top>
				<left>1237</left>
				<width>256</width>
				<height>256</height>
				<texture>$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
			</control>
		</control>



	</controls>
</window>
