<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<controls>
		<include>fade_screen_grey</include>
		<control type="group">
			<posy>400</posy>
			<include>dialog_zoom_animation</include>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>80</height>
				<texture background="true" colordiffuse="$VAR[main_color]">white.png</texture>
			</control>
			<control type="label" id="1">
				<description>heading label</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>1920</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<label>-</label>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<left>0</left>
				<top>-10</top>
				<width>1920</width>
				<height>10</height>
				<texture flipy="true">shadow_horizontal.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>80</posy>
				<width>1920</width>
				<height>235</height>
				<texture background="true" flipy="false">dialogs/long_grey.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>235</top>
				<width>1920</width>
				<height>20</height>
				<texture>shadow_horizontal.png</texture>
				<animation effect="fade" start="100" end="35" time="0" condition="true">Conditional</animation>
			</control>
			<control type="image">
				<left>0</left>
				<top>315</top>
				<width>1920</width>
				<height>20</height>
				<texture>shadow_horizontal.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			<control type="textbox" id="9">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<height>205</height>
				<align>center</align>
				<label>-</label>
				<font>font-22</font>
				<autoscroll time="2000" delay="8000" repeat="5000">!Skin.HasSetting(AutoScroll)</autoscroll>
			</control>
			<control type="grouplist" id="12">
				<posx>0</posx>
				<posy>250</posy>
				<width>1920</width>
				<height>60</height>
				<align>center</align>
				<itemgap>20</itemgap>
				<orientation>horizontal</orientation>
				<onleft>12</onleft>
				<onright>12</onright>
				<onup>12</onup>
				<ondown>12</ondown>
				<control type="button" id="11">
					<description>Yes button</description>
					<width>300</width>
					<height>52</height>
					<label>107</label>
					<font>font-24</font>
					<focusedcolor>$VAR[main_color]</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<include>button_dialogs</include>
					<align>center</align>
				</control>
				<control type="button" id="10">
					<description>No button</description>
					<width>300</width>
					<height>52</height>
					<label>106</label>
					<font>font-24</font>
					<focusedcolor>$VAR[main_color]</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<include>button_dialogs</include>
					<align>center</align>
				</control>
			</control>
		</control>
	</controls>
</window>
