<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<controls>
		<include>fade_screen_grey</include>
		<control type="group">
			<include>dialog_favorite_position</include>
			<!-- Header -->
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>400</width>
				<height>80</height>
				<texture background="true" colordiffuse="$VAR[main_color]">white.png</texture>
			</control>
			<control type="label">
				<description>heading label</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>400</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<label>1036</label>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>400</width>
				<height>10</height>
				<texture>shadow_horizontal.png</texture>
			</control>

			<!-- Content area -->
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>80</posy>
				<width>400</width>
				<height>1000</height>
				<texture background="true" flipy="false">dialogs/long_grey.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>80</top>
				<width>400</width>
				<height>10</height>
				<texture>shadow_horizontal.png</texture>
			</control>
			<!-- left shadow-->
			<control type="image">
				<left>-30</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture flipx="true">shadow_vertical.png</texture>
			</control>
				<!-- right shadow-->
			<control type="image">
				<left>400</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture>shadow_vertical.png</texture>
			</control>
			<control type="list" id="450">
				<posx>0</posx>
				<posy>400</posy>
				<width>400</width>
				<height>660</height>
				<onup>450</onup>
				<onleft>450</onleft>
				<onright>61</onright>
				<ondown>450</ondown>
				<pagecontrol>61</pagecontrol>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<itemlayout width="400" height="44">
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>370</width>
						<height>45</height>
						<font>font-20</font>
						<include>align_tag</include>
						<aligny>center</aligny>
						<textcolor>grey_b</textcolor>
						<selectedcolor>$VAR[main_color]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="400" height="44">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>400</width>
						<height>45</height>
						<texture background="true" colordiffuse="$VAR[main_color]">white.png</texture>
					</control>
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>370</width>
						<height>45</height>
						<font>font-20</font>
						<include>align_tag</include>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<selectedcolor>$VAR[main_color]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="61">
				<posx>870</posx>
				<posy>75</posy>
				<width>10</width>
				<height>500</height>
				<include>scroll_bar</include>
				<onleft>450</onleft>
				<onright>450</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>false</visible>
			</control>
			<control type="image">
				<posx>72</posx>
				<posy>100</posy>
				<width>256</width>
				<height>256</height>
				<aspectratio scalediffuse="true">keep</aspectratio>
				<texture fallback="defaultFolder.png" diffuse="thumb-diffuse.png" background="true">$INFO[Container(450).ListItem.Icon]</texture>
				<fadetime>300</fadetime>
			</control>
		</control>
	</controls>
</window>
