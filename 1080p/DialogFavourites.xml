<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">450</defaultcontrol>
	<coordinates>
		<posx>502</posx>
		<posy>100</posy>
	</coordinates>
	<controls>
		<control type="group">
			<animation effect="zoom" start="0" end="100" center="458,440" time="200">WindowOpen</animation>
			<animation effect="zoom" start="100" end="0" center="458,440" time="200">WindowClose</animation>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>900</width>
				<height>600</height>
				<texture background="true" colordiffuse="grey_50">white.png</texture>
				<bordertexture colordiffuse="grey">white.png</bordertexture>
				<bordersize>2</bordersize>
			</control>
			<control type="label">
				<description>heading label</description>
				<posx>60</posx>
				<posy>10</posy>
				<width>765</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<font>font-30</font>
				<label>1036</label>
			</control>

			<control type="image">
				<posx>2</posx>
				<posy>60</posy>
				<width>896</width>
				<height>2</height>
				<texture background="true">white.png</texture>
			</control>

			<control type="list" id="450">
				<posx>410</posx>
				<posy>70</posy>
				<width>450</width>
				<height>510</height>
				<onup>450</onup>
				<onleft>450</onleft>
				<onright>61</onright>
				<ondown>450</ondown>
				<pagecontrol>61</pagecontrol>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<itemlayout width="450" height="44">
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>420</width>
						<height>45</height>
						<font>font-20</font>
						<align>right</align>
						<aligny>center</aligny>
						<textcolor>grey_b</textcolor>
						<selectedcolor>$VAR[main_color]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="450" height="44">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>450</width>
						<height>45</height>
						<texture background="true" colordiffuse="$VAR[main_color]">white.png</texture>
					</control>
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>420</width>
						<height>45</height>
						<font>font-20</font>
						<align>right</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<selectedcolor>$VAR[main_color]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="61">
				<posx>870</posx>
				<posy>75</posy>
				<width>10</width>
				<height>500</height>
				<include>scroll_bar</include>
				<onleft>450</onleft>
				<onright>450</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="image">
				<posx>50</posx>
				<posy>175</posy>
				<width>256</width>
				<height>256</height>
				<aspectratio scalediffuse="true">keep</aspectratio>
				<texture fallback="defaultFolder.png" diffuse="thumb-diffuse.png" background="true">$INFO[Container(450).ListItem.Icon]</texture>
				<fadetime>300</fadetime>
			</control>
		</control>
