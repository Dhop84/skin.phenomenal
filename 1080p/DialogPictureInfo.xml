<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>5</defaultcontrol>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture>black.png</texture>
			<animation effect="fade" start="0" end="70" time="300">WindowOpen</animation>
			<animation effect="fade" start="70" end="0" time="300">WindowClose</animation>
		</control>
		<control type="group">
			<posx>310</posx>
			<posy>100</posy>
			<animation effect="zoom" start="0" end="100" center="900,480" time="200" delay="300">WindowOpen</animation>
			<animation effect="zoom" start="100" end="0" center="900,480" time="200">WindowClose</animation>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1300</width>
				<height>660</height>
				<texture background="true" colordiffuse="grey_50">white.png</texture>
				<bordertexture colordiffuse="grey">white.png</bordertexture>	
				<bordersize>2</bordersize>
			</control>
			<!-- Heading -->
			<control type="label">
				<left>0</left>
				<top>0</top>
				<align>center</align>
				<width>1300</width>
				<height>72</height>
				<font>font-32</font>
				<label>13406</label>
			</control>

			<!-- OK button -->
			<control type="button" id="9000">
				<left>500</left>
				<top>682</top>
				<width>300</width>
				<label>186</label>
				<textoffsetx>5</textoffsetx>
				<include>button_dialogs</include>
				<onclick>Close</onclick>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onup>5</onup>
				<ondown>noop</ondown>
			</control>

			<!-- List -->
			<control type="list" id="5">
				<left>40</left>
				<top>90</top>
				<width>1290</width>
				<height>560</height>
				<onup>noop</onup>
				<ondown>9000</ondown>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<orientation>vertical</orientation>
				<viewtype label="list">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="1200" height="58">
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>1200</width>
						<height>58</height>
						<font>font-24</font>
						<textcolor>grey_b</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>1200</width>
						<height>58</height>
						<font>font-24</font>
						<align>right</align>
						<textcolor>grey_b</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>

				<focusedlayout width="1200" height="58">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>1200</width>
						<height>58</height>
						<texture colordiffuse="$VAR[main_color]">white.png</texture>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>1200</width>
						<height>58</height>
						<font>font-24</font>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(5)">Conditional</animation>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>1200</width>
						<height>58</height>
						<font>font-24</font>
						<align>right</align>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label2]</label>
						<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(5)">Conditional</animation>
					</control>
				</focusedlayout>

			</control>
		</control>
	</controls>
</window>
