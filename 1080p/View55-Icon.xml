<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View-Icons-55">
		<include>Icons_View</include>
	</include>
	<include name="Icons_View">

		<control type="group">
			<visible>Control.IsVisible(55)</visible>
			<visible>IntegerGreaterThan(Container.NumItems,-1) | !Container.IsUpdating</visible>
			<include>views_animation</include>
			<control type="group">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>1920</width>
					<height>1080</height>
					<texture background="true" fallback="special://skin/backgrounds/videos.jpg">$INFO[ListItem.Property(Fanart_Image)]</texture>
					<aspectratio>scale</aspectratio>
					<fadetime>300</fadetime>
					<visible>!Player.HasVideo + !Window.IsActive(mypics.xml)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>1920</width>
					<height>1080</height>
					<texture background="true" fallback="special://skin/backgrounds/pictures.jpg">$INFO[ListItem.FilenameAndPath]</texture>
					<aspectratio>scale</aspectratio>
					<fadetime>300</fadetime>
					<visible>!Player.HasVideo + Window.IsActive(mypics.xml)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>1920</width>
					<height>1080</height>
					<texture background="true">black.png</texture>
					<animation effect="fade" start="0" end="30" time="0" condition="true">Conditional</animation>
					<aspectratio>scale</aspectratio>
					<visible>!Player.HasVideo</visible>
				</control>


				<control type="panel" id="55">
					<posx>70</posx>
					<posy>150</posy>
					<height>760</height>
					<width>1850</width>
					<onleft>9006</onleft>
					<onright>60</onright>
					<onup>55</onup>
					<ondown>55</ondown>
					<viewtype label="536">panel</viewtype>
					<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),55) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
					<pagecontrol>60</pagecontrol>
					<scrolltime tween="circle" easing="inout">400</scrolltime>
					<preloaditems>2</preloaditems>
					<animation effect="fade" start="0" end="100" time="1000">WindowOpen</animation>
					<animation effect="fade" start="100" end="0" delay="0" time="400">WindowClose</animation>
					<itemlayout width="260" height="380">
						<control type="image">
							<posx>0</posx>
							<width>240</width>
							<height>355</height>
							<aspectratio>stretch</aspectratio>
							<texture diffuse="posterdiffuse.png" background="true" colordiffuse="grey_50">white.png</texture>
						</control>
						<control type="image">
							<posx>10</posx>
							<posy>10</posy>
							<width>220</width>
							<height>335</height>
							<aspectratio>stretch</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<visible>!StringCompare(Listitem.Label,..)</visible>
						</control>
						<control type="image">
							<posx>10</posx>
							<posy>10</posy>
							<width>220</width>
							<height>335</height>
							<aspectratio>stretch</aspectratio>
							<texture colordiffuse="$VAR[main_color]" background="true">$INFO[ListItem.Icon]</texture>
							<visible>StringCompare(Listitem.Label,..)</visible>
						</control>

						<!-- Title Tag on image -->
						<control type="group">
							<visible>!Skin.HasSetting(Hide_label_view_55)</visible>
							<control type="image">
								<posx>10</posx>
								<posy>295</posy>
								<width>220</width>
								<height>50</height>
								<texture background="true">black.png</texture>
								<animation effect="fade" end="80" time="0" condition="true">Conditional</animation>
							</control>
							<control type="label">
								<posx>10</posx>
								<posy>297</posy>
								<width>220</width>
								<height>50</height>
								<align>center</align>	
								<font>font-22</font>
								<textcolor>grey</textcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
						</control>
						<control type="group">
							<posy>5</posy>
							<posx>162</posx>
							<include>view_icons_watched_flags</include>
						</control>

					</itemlayout>
					<focusedlayout width="260" height="380">
						<control type="image">
							<posx>0</posx>
							<width>240</width>
							<height>355</height>
							<aspectratio>stretch</aspectratio>
							<texture diffuse="posterdiffuse.png" background="true" colordiffuse="grey_50">white.png</texture>
						</control>
						<control type="image">
							<posx>10</posx>
							<posy>10</posy>
							<width>220</width>
							<height>335</height>
							<aspectratio>stretch</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<visible>!StringCompare(Listitem.Label,..)</visible>
						</control>
						<control type="image">
							<posx>10</posx>
							<posy>10</posy>
							<width>220</width>
							<height>335</height>
							<aspectratio>stretch</aspectratio>
							<texture colordiffuse="$VAR[main_color]" background="true">$INFO[ListItem.Icon]</texture>
							<visible>StringCompare(Listitem.Label,..)</visible>
						</control>
						<!-- Title Tag on image -->
						<control type="group">
							<visible>!Skin.HasSetting(Hide_label_view_55)</visible>
							<control type="image">
								<posx>10</posx>
								<posy>295</posy>
								<width>220</width>
								<height>50</height>
								<texture background="true">black.png</texture>
								<animation effect="fade" end="80" time="0" condition="true">Conditional</animation>
							</control>
							<control type="label">
								<posx>10</posx>
								<posy>297</posy>
								<width>220</width>
								<height>50</height>
								<align>center</align>	
								<font>font-22</font>
								<textcolor>$VAR[main_color]</textcolor>
								<label>$INFO[ListItem.Label]</label>
							</control>
						</control>
						<control type="group">
							<posy>5</posy>
							<posx>162</posx>
							<include>view_icons_watched_flags</include>
						</control>
						<control type="image">
							<posx>0</posx>
							<width>240</width>
							<height>355</height>
							<aspectratio>stretch</aspectratio>
							<texture diffuse="posterdiffuse.png" background="true" colordiffuse="$VAR[main_color]">views/poster_stroke.png</texture>
						</control>
					</focusedlayout>
				</control>

				<control type="image">
					<posx>0</posx>
					<bottom>0</bottom>
					<height>120</height>
					<width>1920</width>
					<texture>black.png</texture>
					<animation type="Conditional" condition="true">
						<effect type="fade" end="70" time="0"/>
					</animation>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>960</posy>
					<width>1920</width>
					<height>60</height>
					<font>font-30</font>
					<textcolor>white</textcolor>
					<shadowcolor>$var[main_color]</shadowcolor>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<posx>0</posx>
					<bottom>0</bottom>
					<width>1920</width>
					<height>60</height>
					<font>font-20</font>
					<textcolor>white</textcolor>
					<align>center</align>
					<label>$VAR[icons_sublabel]</label>
				</control>

				<control type="group">
					<posx>30</posx>
					<posy>555</posy>
					<animation effect="zoom" start="100" end="125" time="0" condition="true">Conditional</animation>
					<!-- HD\SD\3D Indicator flag -->
					<control type="image">
						<posx>45</posx>
						<posy>330</posy>
						<width>42</width>
						<height>48</height>
						<aspectratio>keep</aspectratio>
						<texture>$VAR[UnFocusHDIndicator]</texture>
						<visible>!IsEmpty(ListItem.VideoResolution)</visible>
					</control>
					<control type="label">
						<posx>10</posx>
						<posy>370</posy>
						<label>$INFO[ListItem.VideoResolution]</label>
						<font>font-16</font>
						<textcolor>white</textcolor>
						<width>110</width>
						<height>52</height>
						<align>center</align>
					</control>
					<!-- Dubbed Language -->
					<control type="group">
						<posx>175</posx>
						<posy>340</posy>
						<visible>!IsEmpty(Window(Home).Property(SkinHelper.ListItemLanguages)) + !ListItem.IsFolder + Container.Content(Movies) + !substring(ListItem.Path,plugin://)</visible>
						<include>ListItemLanguage</include>
						<control type="label">
							<label>21447</label>
							<font>font-16</font>
							<textcolor>white</textcolor>
							<width>240</width>
							<height>52</height>
							<posx>20</posx>
							<posy>28</posy>
							<align>left</align>
						</control>
					</control>


					<!-- Audio Codec -->
					<control type="image">
						<colordiffuse>white</colordiffuse>
						<posx>100</posx>
						<posy>325</posy>
						<width>90</width>
						<height>58</height>
						<texture>$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
					</control>
					<control type="label">
						<posx>90</posx>
						<posy>370</posy>
						<label>$VAR[AudioChannels2]</label>
						<font>font-16</font>
						<textcolor>white</textcolor>
						<width>110</width>
						<height>52</height>
						<align>center</align>
					</control>
				</control>


				<!-- גלילה -->
				<include name="fanart_scroll">
					<param name="id" value="60" />
					<param name="listid" value="55" />
					<param name="posy">0</param>
					<param name="height">1080</param>
				</include>




				<control type="group">
					<posy>-40</posy>
					<include>scroll_letter_fanart</include>
				</control>

			</control>
		</control>
	</include>
	<variable name="icons_sublabel">
		<value condition="Container.Content(episodes)"></value>
		<value condition="Container.Content(addons)"></value>
		<value condition="Container.Content(musicvideos)">$INFO[ListItem.Artist]</value>
		<value condition="Container.Content(movies) + !IsEmpty(ListItem.Title)">$INFO[ListItem.Year,, • ]$INFO[ListItem.Genre,, • ]$INFO[ListItem.Rating,, ]$INFO[ListItem.Duration,• , $LOCALIZE[12391]]</value>
		<value condition="[Container.Content(tvshows) | Container.Content(seasons)] + !IsEmpty(ListItem.Property(TotalSeasons))">$INFO[ListItem.Property(TotalSeasons)] $LOCALIZE[33054], $INFO[ListItem.Property(TotalEpisodes)] $LOCALIZE[20360]</value>
	</variable>
</includes>
