			</control>
			<control type="slider" id="888">
				<description>Slider</description>
				<posx>228</posx>
				<posy>82</posy>
				<width>399</width>
				<height>22</height>
				<action>seek</action>
			</control>
			<control type="label">
				<posx>630</posx>
				<posy>76</posy>
				<width>105</width>
				<height>30</height>
				<label>$INFO[MusicPlayer.Duration]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>grey</textcolor>
