				<aligny>center</aligny>
				<font>font-19</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="label">
				<posx>225</posx>
				<posy>76</posy>
				<width>105</width>
				<height>30</height>
