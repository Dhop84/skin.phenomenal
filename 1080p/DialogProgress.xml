<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>10</defaultcontrol>
	<controls>
		<include>fade_screen_grey</include>
		<control type="group">
			<posy>400</posy>
			<include>dialog_zoom_animation</include>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>80</height>
				<texture background="true" colordiffuse="$VAR[main_color]">white.png</texture>
			</control>
			<control type="label" id="1">
				<description>heading label</description>
				<font>-</font>
				<visible>false</visible>
			</control>
			<control type="label">
				<description>heading label</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>1920</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<label>$INFO[Control.GetLabel(1)] $INFO[System.Progressbar,- ,%]</label>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<left>0</left>
				<top>-10</top>
				<width>1920</width>
				<height>10</height>
				<texture flipy="true">shadow_horizontal.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>80</posy>
				<width>1920</width>
				<height>235</height>
				<texture background="true" flipy="false">dialogs/long_grey.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>235</top>
				<width>1920</width>
				<height>20</height>
				<texture>shadow_horizontal.png</texture>
				<animation effect="fade" start="100" end="35" time="0" condition="true">Conditional</animation>
			</control>
			<control type="image">
				<left>0</left>
				<top>315</top>
				<width>1920</width>
				<height>20</height>
				<texture>shadow_horizontal.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			<control type="textbox" id="9">
				<posx>0</posx>
				<posy>90</posy>
				<width>1920</width>
				<height>205</height>
				<align>center</align>
				<label>-</label>
				<font>font-20</font>
				<textcolor>grey_b</textcolor>
				<autoscroll time="2000" delay="8000" repeat="5000">!Skin.HasSetting(AutoScroll)</autoscroll>
			</control>
			<control type="progress">
				<description>Progressbar</description>
				<posx>0</posx>
				<posy>210</posy>
				<width>1920</width>
				<height>35</height>
				<info>System.Progressbar</info>
			</control>
			<control type="button" id="10">
				<description>OK button</description>
				<posx>0</posx>
				<posy>250</posy>
				<width>1920</width>
				<height>52</height>
				<label>186</label>
				<font>font-24</font>
				<align>center</align>
				<focusedcolor>$VAR[main_color]</focusedcolor>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>10</onup>
				<ondown>10</ondown>
			</control>
		</control>
	</controls>
</window>
